<!DOCTYPE html>
<html lang="en">

<head style="padding: 0% !important; margin: 0% !important;">
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>XEIDESAL</title>

    <!-- Favicon -->
    <link rel="icon" href="/public/img/core-img/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/public/style.css">

</head>


<body style="padding: 0% !important; margin: 0% !important;">

    
    <%- include('header.ejs') %>

    <!-- ##### Hero Area Start ##### -->
    <div style="background-image: url('<%= dados[0].foto_artista %>'); height: 510px; background-repeat: no-repeat; background-position-x: center;" class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-4" style="margin-top: 34%; margin-left: -10%;">
                    <a href="<%= dados[0].icon %>" target="_blank" style="cursor: default;">
                        <img src="<%= dados[0].icon %>" class="foto-perfil">
                    </a>    
                </div>
                <div class="col-sm-6" style="margin-top: 45%; margin-left: -3%;">
                    <div class="row">
                        <p class="h2"><%= dados[0].artista %></p>
                    </div>
                    <div class="row">
                        <p class="h6"><%= ' ' + dados[0].biografia %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style=" margin-top: 10% !important;">
        <div class="container-fluid" style=" margin:0% !important; padding: 0 !important;">
            <div class="col-sm-6"><br><br></div>
            <div class="row linha justify-content-center">
                <% var r; for(i=0;i<album.length;i++){%>
                <div class="col-sm-3 mb-5">
                    <div class="card zoom shadow-lg select-album">
                        <a href="/album/<%=album[i].id_album%>"><img class="card-img-top foto-album" src="<%= album[i].foto_album %>"></a>
                        <div class="card-body shadow">
                            <a href="/album/<%=album[i].id_album%>"><p class="card-text text-center h2"><%= album[i].album %></p></a>
                        </div>
                    </div>
                </div>
                <%r++; if(r==3){%>
                <div class="row linha justify-content-center">
                    <% }}%>
                </div>
                <!--fim primeira parte -->
            </div>
        </div>
    </div>

    <%- include ('footer.ejs') %>


</body>

</html>